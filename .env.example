# Base URL of the Service Public BJ portal
MCP_SP_BASE_URL=https://service-public.bj/

# Finances BJ provider configuration
MCP_FINANCES_BASE_URL=https://finances.bj/

# Enable providers (comma separated ids)
MCP_ENABLED_PROVIDERS=service-public-bj,finances-bj

# Optional provider priority overrides (provider_id:priority)
# MCP_PROVIDER_PRIORITIES=service-public-bj:100,finances-bj:80

# Directory where registry snapshots are stored (absolute path recommended)
MCP_SP_CACHE_DIR=/path/to/your/project/data/registry

# Concurrency and timeout settings
MCP_SP_CONCURRENCY=2
MCP_SP_TIMEOUT=30
MCP_SP_CACHE_TTL=300
